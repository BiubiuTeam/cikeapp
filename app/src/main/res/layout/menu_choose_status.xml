<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:background="#b0ffd600">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你此刻的状态是？"
        android:layout_marginTop="50dp"
        android:id="@+id/tv_send_status_menu_text"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/btn_send_status_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="失恋中"
        android:src="@drawable/love"
        android:layout_marginRight="115dp"
        android:layout_alignRight="@+id/btn_send_status_boring"
        android:layout_alignTop="@+id/btn_send_status_boring" />

    <ImageView
        android:id="@+id/btn_send_status_boring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无聊"
        android:src="@drawable/boring"
        android:layout_below="@+id/tv_send_status_menu_text"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/btn_send_status_thinklife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="思考人生"
        android:src="@drawable/thinklife"
        android:layout_marginLeft="115dp"
        android:layout_alignLeft="@+id/btn_send_status_boring"
        android:layout_alignTop="@+id/btn_send_status_boring" />

    <ImageView
        android:id="@+id/btn_send_status_selfstudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上自习"
        android:src="@drawable/selfstudy"
        android:layout_marginRight="115dp"
        android:layout_alignRight="@+id/btn_send_status_ontheway"
        android:layout_alignTop="@+id/btn_send_status_ontheway" />

    <ImageView
        android:id="@+id/btn_send_status_ontheway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在路上"
        android:src="@drawable/ontheway"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/btn_send_status_boring"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/btn_send_status_onwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上班ing"
        android:src="@drawable/onwork"
        android:layout_marginLeft="115dp"
        android:layout_alignLeft="@+id/btn_send_status_ontheway"
        android:layout_alignTop="@+id/btn_send_status_ontheway" />

    <ImageView
        android:id="@+id/btn_send_status_bodybuilding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="健身"
        android:src="@drawable/bodybuilding"
        android:layout_marginRight="115dp"
        android:layout_alignRight="@+id/btn_send_status_bigmeal"
        android:layout_alignTop="@+id/btn_send_status_bigmeal" />

    <ImageView
        android:id="@+id/btn_send_status_bigmeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="吃大餐"
        android:src="@drawable/bigmeal"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/btn_send_status_ontheway"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/btn_send_status_selfshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自拍"
        android:src="@drawable/selfshot"
        android:layout_marginLeft="115dp"
        android:layout_alignLeft="@+id/btn_send_status_bigmeal"
        android:layout_alignTop="@+id/btn_send_status_bigmeal" />

    <Button
        android:id="@+id/btn_send_status_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="12.5dp"
        android:text="+"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/btn_send_status_bigmeal"
        android:layout_centerHorizontal="true" />

</RelativeLayout>