<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你此刻的状态是？"
        android:id="@+id/tv_send_status_menu_text"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/btn_send_status_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="失恋中"
        android:src="@drawable/love"
        android:layout_above="@+id/btn_send_status_selfstudy"
        android:layout_alignLeft="@+id/btn_send_status_selfstudy"
        android:layout_alignStart="@+id/btn_send_status_selfstudy"
        android:layout_marginBottom="38dp" />

    <ImageView
        android:id="@+id/btn_send_status_boring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无聊"
        android:src="@drawable/boring"
        android:layout_alignTop="@+id/btn_send_status_love"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/btn_send_status_thinklife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="思考人生"
        android:src="@drawable/thinklife"
        android:layout_below="@+id/btn_send_status_onwork"
        android:layout_alignLeft="@+id/btn_send_status_onwork"
        android:layout_alignStart="@+id/btn_send_status_onwork"
        android:layout_marginTop="53dp" />

    <ImageView
        android:id="@+id/btn_send_status_selfstudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上自习"
        android:src="@drawable/selfstudy"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_above="@+id/btn_send_status_bodybuilding"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/btn_send_status_ontheway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在路上"
        android:src="@drawable/ontheway"
        android:layout_alignTop="@+id/btn_send_status_thinklife"
        android:layout_alignLeft="@+id/btn_send_status_bigmeal"
        android:layout_alignStart="@+id/btn_send_status_bigmeal" />

    <ImageView
        android:id="@+id/btn_send_status_onwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上班ing"
        android:src="@drawable/onwork"
        android:layout_below="@+id/btn_send_status_selfstudy"
        android:layout_alignLeft="@+id/btn_send_status_selfshot"
        android:layout_alignStart="@+id/btn_send_status_selfshot" />

    <ImageView
        android:id="@+id/btn_send_status_bodybuilding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="健身"
        android:src="@drawable/bodybuilding"
        android:layout_above="@+id/btn_send_status_bigmeal"
        android:layout_alignLeft="@+id/btn_send_status_selfstudy"
        android:layout_alignStart="@+id/btn_send_status_selfstudy" />

    <ImageView
        android:id="@+id/btn_send_status_bigmeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="吃大餐"
        android:src="@drawable/bigmeal"
        android:layout_alignTop="@+id/btn_send_status_selfshot"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/btn_send_status_selfshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自拍"
        android:src="@drawable/selfshot"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_above="@+id/btn_send_status_back"
        android:layout_toRightOf="@+id/tv_send_status_menu_text"
        android:layout_toEndOf="@+id/tv_send_status_menu_text"
        android:layout_marginBottom="26dp" />

    <Button
        android:id="@+id/btn_send_status_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="70dp"
        android:text=""
        android:layout_marginBottom="87dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>