<?xml version="1.0" encoding="utf-8"?>
<com.yunkairichu.cike.widget.FaceRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FaceRelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/ll_facechoose"
        android:layout_width="fill_parent"
        android:layout_height="246dip"
        android:background="#393832"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dip"
            android:background="#979797"
            android:layout_alignParentTop="true"
            android:gravity="center">
        </View>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_contains"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dip"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

</com.yunkairichu.cike.widget.FaceRelativeLayout>