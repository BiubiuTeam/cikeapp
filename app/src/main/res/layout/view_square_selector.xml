<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffd600">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/squareSelScrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/squareSelGridLayout"
            android:columnCount="4"
            android:rowCount="8">

            <RadioGroup
                android:id="@+id/squareSelRadioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全球"
                    android:id="@+id/squareSelLocButton1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同城"
                    android:id="@+id/squareSelLocButton2"
                    android:layout_row="0"
                    android:layout_column="1" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="想看到的状态"
                android:id="@+id/squareSelTestView1"
                android:layout_row="1"
                android:layout_column="0" />

            <RadioGroup
                android:id="@+id/squareSelRadioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:id="@+id/squareSelTagButton1"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="失恋中"
                    android:id="@+id/squareSelTagButton2"
                    android:layout_row="2"
                    android:layout_column="1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无聊"
                    android:id="@+id/squareSelTagButton3"
                    android:layout_row="2"
                    android:layout_column="2"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="思考人生"
                    android:id="@+id/squareSelTagButton4"
                    android:layout_row="3"
                    android:layout_column="0" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上自习"
                    android:id="@+id/squareSelTagButton5"
                    android:layout_row="3"
                    android:layout_column="1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在路上"
                    android:id="@+id/squareSelTagButton6"
                    android:layout_row="3"
                    android:layout_column="2"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上班ing"
                    android:id="@+id/squareSelTagButton7"
                    android:layout_row="4"
                    android:layout_column="0"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健身"
                    android:id="@+id/squareSelTagButton8"
                    android:layout_row="4"
                    android:layout_column="1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吃大餐"
                    android:id="@+id/squareSelTagButton9"
                    android:layout_row="4"
                    android:layout_column="2"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在自拍"
                    android:id="@+id/squareSelTagButton10"
                    android:layout_row="5"
                    android:layout_column="0"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="想看到的用户"
                android:id="@+id/squareSelTestView2"
                android:layout_row="6"
                android:layout_column="0"/>

            <RadioGroup
                android:id="@+id/squareSelRadioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:id="@+id/squareSelSexButton1"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男生"
                    android:id="@+id/squareSelSexButton2"
                    android:layout_row="7"
                    android:layout_column="1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女生"
                    android:id="@+id/squareSelSexButton3"
                    android:layout_row="7"
                    android:layout_column="2"/>
            </RadioGroup>
        </GridLayout>
    </ScrollView>
</GridLayout>