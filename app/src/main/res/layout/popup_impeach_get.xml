<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:background="@drawable/shape_black_corner_fill"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/btnImpeachGetText"
        android:paddingLeft="80dip"
        android:paddingRight="80dip"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="40dip"
        android:paddingBottom="40dip"
        android:drawablePadding="5dip"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你已经被对方举报，无法再进行会话或信息查看" />

    <Button
        android:id="@+id/btnImpeachGet"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@drawable/dialog_btn_fill_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定" />

</LinearLayout>